
@{
    ViewData["Title"] = "BlogPaylasimlarIncele";
    Layout = "~/Views/Kullanici/Index.cshtml";
}

<div class="row">

    <div class="col-md-12">

        <ol class="breadcrumb breadcrumb-arrow">
            <li><a href="#"><i class="glyphicon glyphicon-home"></i> Anasayfa</a></li>
            <li><a href="#"><i class="glyphicon glyphicon-list-alt"></i> Kullanıcılar</a></li>
            <li class="active"><span><i class="glyphicon glyphicon-calendar"></i> Kullanıcı Düzenle</span></li>
        </ol>
    </div>
</div>
<div class="panel-body">
    <div class="content-row" ng-app="MakaleDuzenle">
        <div class="bs-example" ng-controller="makaleDuzenle">

            <div class="form-group">
                <img src="~/Belgeler/Image/{{makale.Resim}}" class="img-circle" width="300" height="300" />
                <br /><br />
                <input type="file" name="ProfileImage" id="Resim" asp-for="Image" class="form-control" /><br />
                <span class="glyphicon glyphicon-info-sign">&nbsp;</span>
                <span><i>Lütfen jpg,jpeg ya da png formatı kullanın.</i></span>
            </div>

            <div class="form-group">
                @Html.Label("", "Konu Adı", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="text" value="{{makale.KonuAdi}}" disabled name="KonuAdi" id="KonuAdi" class="form-control" placeholder="Konu Adı" />

                </div>
            </div><br />

            <div class="form-group">
                @Html.Label("", "Başlık", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="text" value="{{makale.Baslik}}" disabled name="Baslik" id="Baslik" class="form-control" placeholder="Başlık" />

                </div>
            </div><br />


            <div class="form-group">
                @Html.Label("", "Alt Başlık", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="text" value="{{makale.AltBaslik}}" disabled name="AltBaslik" id="AltBaslik" class="form-control" placeholder="Alt Başlık" />

                </div>
            </div><br />


            <div class="form-group">
                @Html.Label("", "İçerik", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="text" value="{{makale.Icerik}}" name="Icerik" id="Icerik" class="form-control" placeholder="İçerik" />

                </div>
            </div><br />


            <div class="form-group">
                @Html.Label("", "Tarih", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="text" value="{{makale.Tarih}}" disabled name="Tarih" id="Tarih" class="form-control" placeholder="Tarih" />

                </div>
            </div><br />

            <div class="form-group">
                @Html.Label("", "Kazanılan Para", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="text" value="{{makale.KazanilanPara}}" disabled name="KazanilanPara" id="KazanilanPara" class="form-control" placeholder="Kazanılan Para" />

                </div>
            </div><br />


           



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="margin-top:20px;">
                    <a href="/Kullanicilar/BlogPaylasimlar" class="btn btn-info pull-right" style="margin-left:10px">Makale Listesi</a>
                    <button class="btn btn-success pull-right" name="{{makale.Id}}" id="btnKullaniciDuzenle">Makale Düzenle</button>
                </div>
            </div>
        </div>
    </div>
</div>

