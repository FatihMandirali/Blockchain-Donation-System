                    <input type="text" value="" name="KullaniciAdi" id="KullaniciAdi" class="form-control" placeholder="Kullanıcı Adı" />
                </div>
            </div><br />
            <div class="form-group">
                @Html.Label("", "Şifre", htmlAttributes: new { @class = "control-label col-md-2" })
