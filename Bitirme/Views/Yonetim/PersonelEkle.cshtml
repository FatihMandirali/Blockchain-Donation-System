                    <input type="text" value="" name="Tc" id="Tc" class="form-control" placeholder="Tc" />
                </div>
            </div><br />
            <div class="form-group">
                @Html.Label("", "Telefon", htmlAttributes: new { @class = "control-label col-md-2" })
