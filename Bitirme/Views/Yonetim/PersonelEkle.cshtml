                    <input type="text" value="" name="Sifre" id="Sifre" class="form-control" placeholder="Şifre" />
                </div>
            </div><br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="margin-top:20px;">
                    <a href="/Yonetim/Personeller" class="btn btn-info pull-right" style="margin-left:10px">Personeller Listesi</a>
                    <button type="button" id="personelEkle" class="btn btn-success pull-right">
                        <span class="glyphicon glyphicon-floppy-disk"></span>Oluştur
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>



