                    <input type="text" value="" name="Soyadi" id="Soyadi" class="form-control" placeholder="Soyadı" />
                </div>
            </div><br />
            <div class="form-group">
                @Html.Label("", "E-Mail", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="text" value="" name="EMail" id="EMail" class="form-control" placeholder="E-Mail" />
                </div>
            </div><br />
            <div class="form-group">
                @Html.Label("", "Tc", htmlAttributes: new { @class = "control-label col-md-2" })
